# ============================================
# BHARAT LOW OIL PLATFORM - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# DATABASE - SUPABASE (PostgreSQL)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# DATABASE - MONGODB ATLAS
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bharat-oil?retryWrites=true&w=majority

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# API GATEWAY
# ============================================
API_GATEWAY_PORT=3000
NODE_ENV=development

# Backend Service URLs (internal)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
TRACKING_SERVICE_URL=http://localhost:3003
AI_SERVICE_URL=http://localhost:8000
REWARD_SERVICE_URL=http://localhost:3005
PARTNERSHIP_SERVICE_URL=http://localhost:3006
LEARNING_SERVICE_URL=http://localhost:3007
POLICY_SERVICE_URL=http://localhost:3008

# ============================================
# REDIS (Rate Limiting & Caching)
# ============================================
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your-token

# ============================================
# FILE STORAGE - CLOUDINARY
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# AI/ML SERVICES
# ============================================
# OpenAI (optional - for advanced features)
OPENAI_API_KEY=sk-your-openai-key

# Hugging Face (for free models)
HUGGINGFACE_API_KEY=hf_your-key

# Spoonacular Recipe API
SPOONACULAR_API_KEY=your-spoonacular-key

# ============================================
# IOT - MQTT BROKER
# ============================================
MQTT_BROKER_URL=mqtt://broker.hivemq.com
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# BLOCKCHAIN - POLYGON AMOY TESTNET
# ============================================
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
DEPLOYER_PRIVATE_KEY=your-private-key-without-0x
CONTRACT_ADDRESS=0x...

# ============================================
# PUSH NOTIFICATIONS - EXPO
# ============================================
EXPO_ACCESS_TOKEN=your-expo-token

# ============================================
# MONITORING & ANALYTICS
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# AZURE (OPTIONAL - API GATEWAY ONLY)
# ============================================
AZURE_APP_SERVICE_URL=https://your-app.azurewebsites.net

# ============================================
# EXTERNAL APIs
# ============================================
# Google Maps (for heatmap)
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Open Food Facts (for barcode scanner)
OPEN_FOOD_FACTS_API=https://world.openfoodfacts.org/api/v0

# ============================================
# CORS & SECURITY
# ============================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3100,http://localhost:3200,http://localhost:19006,http://localhost:8081
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_BLOCKCHAIN=true
ENABLE_IOT=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_BARCODE_SCANNER=true
