# API Gateway URL - Single entry point for all backend services
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3000

# Cloudinary for image uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=bharat-low-oil

# Blockchain verification (optional)
NEXT_PUBLIC_BLOCKCHAIN_VERIFY_URL=https://amoy.polygonscan.com/tx/

# Feature flags
NEXT_PUBLIC_ENABLE_BARCODE_SCANNER=true
NEXT_PUBLIC_ENABLE_AI_RECOMMENDATIONS=true

# Environment
NEXT_PUBLIC_ENV=development
