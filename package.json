{
  "name": "bharat-low-oil-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Government platform for reducing edible oil consumption in India",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:apps": "turbo run dev --filter='./apps/*' --parallel",
    "dev:services": "turbo run dev --filter='./services/*' --parallel",
    "dev:web": "turbo run dev --filter='./apps/web-app' --filter='./apps/admin-dashboard' --filter='./apps/restaurant-portal' --parallel",
    "dev:mobile": "turbo run dev --filter='./apps/mobile-app'",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:services": "turbo run build --filter='./services/*'",
    "build:packages": "turbo run build --filter='./packages/*'",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MoA-FW-oil-consumption-platform/bharat-low-oil-platform.git"
  },
  "author": "Ministry of Agriculture & Farmers Welfare",
  "license": "MIT"
}
